{
    "name": "YunoHost rainradar app",
    "id": "rainradar",
    "packaging_format": 1,
    "description": {
        "en": "virtual rainsensor using mqtt"
    },
    "version": "1.0~ynh1",
    "url": "https://example.com",
    "license": "free",
    "maintainer": {
        "name": "siwinter"
    },
    "requirements": {
        "yunohost": ">= 4.1.3"
    },
    "multi_instance": false,
    "services": [
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
				"ask": {
					"en": "Choose a domain for Rainradar"
				},
                "example": "example.com"
            },
            {
                "name": "path",
                "type": "path",
				"ask": {
					"en": "Choose a path for Rainradar"
				},
                "example": "/rainradar",
                "default": "/rainradar"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "default": true
            },
            {
                "name": "MQTT-server",
				"type": "string",
				"ask": {
					"en": "IP-Address for MQTT-connection"
				},
                "example": "192.168.1.15"
            },
            {
                "name": "MQTT-port",
				"type": "string",
				"ask": {
					"en": "Port for MQTT-connection"
				},
                "default": "1884",
                "example": "1884"
            }
        ]
    }
}
